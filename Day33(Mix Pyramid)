#include <iostream>
using namespace std;
void upperpra(int n){
    for(int i=0;i<n;i++){
        for(int j=0;j<n-i;j++){
            cout<<"*";
        }
          for(int j=0;j<2*i+1;j++){
            cout<<" ";
        }
        for(int j=0;j<n-i;j++){
            cout<<"*";
        }
      cout<<endl;
    }
}
void lowerpra(int n){
    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
          for(int j=0;j<2*(n-i)-1;j++){
            cout<<" ";
        }
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
      cout<<endl;
    }
}
int main() {
int n;
cin>>n;
upperpra(n);
lowerpra(n);
    return 0;
